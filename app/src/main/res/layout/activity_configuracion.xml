<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.usuario1.geolocalizacion.Configuracion"
    android:orientation="vertical">


    <Button
        android:id="@+id/bGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/combustible"
        android:layout_below="@+id/combustible"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Guardar" />

    <EditText
        android:id="@+id/marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/marca"
        android:layout_below="@+id/marca"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/consumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tconsumo"
        android:layout_alignBottom="@+id/tconsumo"
        android:layout_alignStart="@+id/modelo"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/combustible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tcarburante"
        android:layout_alignBottom="@+id/tcarburante"
        android:layout_alignStart="@+id/consumo"
        android:ems="10"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/lista_vehiculos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bGuardar" />

    <TextView
        android:id="@+id/tmarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/marca"
        android:layout_alignBottom="@+id/marca"
        android:layout_alignEnd="@+id/tmodelo"
        android:text="Marca:" />

    <TextView
        android:id="@+id/tmodelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/modelo"
        android:layout_alignBottom="@+id/modelo"
        android:layout_alignEnd="@+id/tconsumo"
        android:text="Modelo:" />

    <TextView
        android:id="@+id/tconsumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/modelo"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:text="Media consumo:" />

    <TextView
        android:id="@+id/tcarburante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tconsumo"
        android:layout_below="@+id/consumo"
        android:layout_marginTop="32dp"
        android:text="Carburante:" />
</RelativeLayout>